<%= form_for @changeset, Routes.post_path(@conn, :create), [multipart: true], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :image %><br>
    <%= file_input f, :image %>
    <%= error_tag f, :image %>
  </div>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
